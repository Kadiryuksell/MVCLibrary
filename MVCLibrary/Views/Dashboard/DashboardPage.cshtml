
@{
    ViewBag.Title = "DashboardPage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="css/font-awesome.css">
<link href="~/DashboardTemplate/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
<script src="~/DashboardTemplate/js/Chart1.js"></script>
<script src="~/DashboardTemplate/js/jquery.min.js"></script>
<script src="~/DashboardTemplate/js/jquery.vmap.js" type="text/javascript"></script>
<script src="~/DashboardTemplate/js/jquery.vmap.world.js" type="text/javascript"></script>
<script src="~/DashboardTemplate/js/jquery.vmap.sampledata.js" type="text/javascript"></script>
<link href="~/DashboardTemplate/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />
<script>
    $(document).ready(function (c) {
        $('.alert-close6').on('click', function (c) {
            $('.world-map').fadeOut('slow', function (c) {
                $('.world-map').remove();
            });
        });
    });
</script>

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#vmap').vectorMap({
            map: 'world_en',
            backgroundColor: '#333333',
            color: '#ffffff',
            hoverOpacity: 0.7,
            selectedColor: '#666666',
            enableZoom: true,
            showTooltip: true,
            values: sample_data,
            scaleColors: ['#C8EEFF', '#006491'],
            normalizeFunction: 'polynomial'
        });
    });
</script>

<h2>Dashboard</h2>

<div class="list_of_members">
    <div class="sales">
        <div class="icon">
            <i class="dollar"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.Penalties $</h3>
            <p>Total Cash</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="new-users">
        <div class="icon">
            <i class="user1"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.Users</h3>
            <p>Total User</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="orders">
        <div class="icon">
            <i class="order"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.Books</h3>
            <p>Total Book</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="visitors">
        <div class="icon">
            <i class="visit"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.brwdBook</h3>
            <p>borrowed books</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>


<div class="total-sales">
    <div class="user-trends">
        <div class="alert-close7"> </div>

        <canvas id="bar" height="340" width="780"></canvas>
        <script>

            var barChartData = {
                labels: ["January", "February", "March", "April", "May", "June", "July"],
                datasets: [
                    {
                        fillColor: "rgba(255, 137, 167, 0.78)",
                        strokeColor: "rgba(220,220,220,1)",
                        data: [65, 59, 90, 81, 56, 55, 40]
                    },
                    {
                        fillColor: "rgba(140, 145, 255, 0.69)",
                        strokeColor: "rgba(151,187,205,1)",
                        data: [28, 48, 40, 19, 96, 27, 100]
                    }
                ]

            }

            var myLine = new Chart(document.getElementById("bar").getContext("2d")).Bar(barChartData);

        </script>
    </div>
    <div class="to-do">
        <div class="alert-close5"> </div>
        <h3>To-Do</h3>
        <div class="checkbox-form">
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Call the publishing house.</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Check for borrowed books.</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Check the cash register.</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Weekend shift.</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Entry of new books.</label>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="total-world">
    <div class="world-map">
        <div class="alert-close6"> </div>
        <h3>World Map</h3>
        <p><span class="color1"></span>40%<span class="color2"></span>12%<span class="color3"></span>11%<span class="color4"></span>10%<span class="color5"></span>18%</p>
        <div class="clearfix"></div>
        <div id="vmap" style="width: 600px; height: 400px;"></div>
    </div>
    <div class="site-report">
        <div class="alert-close3"> </div>
        <h3>System Report</h3>
        <div class="skills-top">
            <h5>Satisfaction</h5>
            <h4>89%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill" style="width:89%"></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Reliability</h5>
            <h4>90%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill1" style="width:90%"></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Weekly income return</h5>
            <h4>70%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill2" style="width:70%"></div>
            </div>
        </div>
      </div>
    <div class="clearfix"></div>
</div>