@using MVCLibrary.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Users>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Users</h1>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>School</th>
        <th>Update</th>
        <th>Delete</th>
        <th>Member Book History</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Name </td>
            <td>@user.LastName </td>
            <td>@user.School</td>
            <td><a href="/User/UserBring/@user.Id" class="btn btn-success">Update</a></td>
            <td><a href="/User/UserDelete/@user.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/User/UserBookHistory/@user.Id" style="background-color:lightseagreen" class="btn btn-success">Book History</a></td>

        </tr>

    }
</table>
@Html.PagedListPager((IPagedList)Model, pageCount => Url.Action("UserList", new { pageCount }))

<a href="/User/UserAdd/" class="btn btn-primary">New User Add</a>




