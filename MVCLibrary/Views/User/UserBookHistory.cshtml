@using MVCLibrary.Models.Entity
@model List<LibraryOperations>
@{
    ViewBag.Title = "UserBookHistory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<table class="table table-bordered table-hover">
    <tr style="background-color:orange">
        <th>Book Name</th>
        <th>Employee</th>
        <th>Purchase Date</th>
        <th>Return Date</th>
    </tr>
    @foreach(var operation in Model)
            {
                <tr>
                    <td>@operation.Books.Name</td>
                    <td>@operation.Employee.Name @operation.Employee.LastName</td>
                    <td>@(Convert.ToDateTime(operation.PurchaseDate).ToShortDateString())</td>
                    <td>@(Convert.ToDateTime(operation.ReturnDate).ToShortDateString())</td>
                </tr>
            }
</table>

