@using MVCLibrary.Models.Entity
@model List<LibraryOperations>
@{
    ViewBag.Title = "MyBooks";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <a class="btn btn-success">
                                                <span class="bg-success">
                                                    @(((DateTime)item.PurchaseDate).ToString("dd-MMM-yyyy"))
                                                </span>
                                            </a>
                                            -----
                                            <a class="btn btn-warning">
                                                <span class="bg-warning">

                                                    @(((DateTime)item.DateMemberBrought).ToString("dd-MMM-yyyy"))
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    <b>@item.Books.Name</b>
                                                </div>
                                                <div class="timeline-body">

                                                   Employee: <b>@item.Employee.Name @item.Employee.LastName</b>
                                                </div>
                                            </div>
                                       </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
    </section>
</body>
</html>

