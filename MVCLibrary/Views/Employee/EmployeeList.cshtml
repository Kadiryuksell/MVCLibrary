@using MVCLibrary.Models.Entity
@model List<Employee>
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Employees</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name </td>
            <td>@employee.LastName </td>
            <td><a href="/Employee/EmployeeBring/@employee.Id" class="btn btn-success">Update</a></td>
            <td><a href="/Employee/EmployeeDelete/@employee.Id" class="btn btn-danger">Delete</a></td>

        </tr>

    }
</table>

<a href="/Employee/EmployeeAdd/" class="btn btn-primary">New Employee Add</a>

