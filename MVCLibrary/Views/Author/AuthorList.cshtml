@using MVCLibrary.Models.Entity
@model List<Authors>

@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<h2>Author operation</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Detail</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td>@author.LastName</td>
            <td>@author.Detail</td>
            <td><a href="/Author/AuthorBring/@author.Id" class="btn btn-success">Update</a></td>
            <td>@Html.ActionLink("Delete", "AuthorDelete", new { id = author.Id }, new { @class = "btn btn-danger", @onclick = $"return confirm('Do you want to delete {author.Name + " "+author.LastName} ?');" })</td>

        </tr>

    }
</table>

<a href="/Author/AuthorAdd/" class="btn btn-primary">New Author Add</a>


