@using MVCLibrary.Models.Entity
@model List<Authors>

@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<h2>Author operation</h2>

<table class="table table-hover">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Detail</th>
        <th>State</th>
        <th>Update</th>
        <th>Change to State</th>
    </tr>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td>@author.LastName</td>
            <td>@(author.Detail.Length > 50 ? author.Detail.Substring(0, 50) + "..." : author.Detail)</td>
            <td>@author.State</td>
            <td><a href="/Author/AuthorBring/@author.Id" class="btn btn-success">Update</a></td>
            <td>
                <a href="/Author/AuthorSelectActive/@author.Id" class="btn btn-warning">Active</a>
                <a href="/Author/AuthorSelectPassive/@author.Id" class="btn btn-danger">Passive</a>
            </td>

        </tr>

    }
</table>

<a href="/Author/AuthorAdd/" class="btn btn-primary">New Author Add</a>


